extends ../_shared/_master

block title
    | Car Rentals - Register

block main
    #main
        .container
            #login-register-page
                h1#main-title Register
                #register
                    form#register-form(action='/auth/register', method='POST')
                        input(type='hidden', name='_csrf', value=csrfTokenFunc())
                        label(for='name') Name
                        br
                        input#name.form-control(type='text', name='name')
                        br
                        label(for='username') Username
                        br
                        input#username.form-control(type='text', name='username')
                        br
                        label(for='password') Password
                        br
                        input#password.form-control(type='password', name='password')
                        br
                        label(for='user-phone') Phone number
                        br
                        input#user-phone.form-control(type='text', name='phone')
                        br
                        label(for='user-email') Email
                        br
                        input#user-email.form-control(type='email', name='email')
                        br
                        button.btn.btn-primary(type='submit') Register
                    .toastr
                        #{req.toastr.render()}
