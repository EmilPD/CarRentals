extends _shared/_master

block adminpage
    #view-users
        h2#main-title View Users
        if context.length
            .row
                .col-xs-12
                    article.users.header
                        .user-username Username
                        .user-name Name
                        .user-phone Phone Number
                        .user-email Email
                        .user-edit Operation
                each user, i in context
                    .col-xs-12
                        article.users
                            .user-username
                                = user.username
                            .user-name
                                = user.name
                            .user-phone
                                = user.phone
                            .user-email
                                = user.email
                            .user-edit
                                a(href='/auth/edituser/' + user._id) Edit