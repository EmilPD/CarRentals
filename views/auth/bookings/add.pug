extends ../../_shared/_master

block main
    #main
        .container
            #user-profile-page
                h1#main-title Welcome, 
                    =user.username
                h2()
                    center
                        | Fill in the form to book this car
                #{req.toastr.render()}
                #user-profile
                    form#profile-form(action='/auth/bookings/' +context.id, method="POST")
                        label(for='model') Car Model
                        br
                        input#username.form-control(type='text', name='username', value=context.car.makemodel, disabled='')
                        br
                        label(for='model') Pickup location
                        br
                        input.search-form-input(name='location' type='text', placeholder='Sofia', maxlength='90', disabled='')
                        br
                        label(for='model') Pick-up date
                        br
                        input.search-form-input.datepicker-from(name='startdate' type='text', placeholder='Pickup Date')
                        br
                        label(for='model') Drop-off date
                        br
                        input.search-form-input.datepicker-to(name='enddate' type='text', placeholder='Dropoff Date')
                        br
                        h3
                            | Total price: 
                            span.automatic-price(base=context.car.baseprice, special=context.car.specialprice, activated=context.car.specialpriceactivated)
                            span $
                        button.btn.btn-primary(type='submit') Add booking