extends ../_shared/_master
include ../auth/modals/comment.pug

block main
    #main
        .container
            #car-details
                if context.car   
                    - var car = context.car;
                    .row
                        .col-xs-12.col-md-4.border-right-1px
                            .car-model #{car.model}
                            .car-price From $#{car.baseprice} per Day
                            span.car-image
                                img(src=car.carphotolink, width='250', alt='Economy car')
                        .col-xs-12.col-md-8
                            .car-info
                                .car-capacity
                                    span.car-passengers #{car.adultscount} Adults
                                    span.car-bags #{car.bagscount} Bags
                                    span.car-doors #{car.doorscount} Doors
                                .car-class #{car.category}
                                .row
                                    .col-xs-12.col-md-5
                                        ul.car-features
                                            li Fuel type: #{car.fueltype}
                                            li Mileage: #{car.mileage} Mpg
                                            li Transmission: #{car.transmission}
                                    .col-xs-12.col-md-5
                                        ul.car-features
                                            if car.airconditioner=1
                                                li Air Conditioning
                                            li Model #{car.yearofmanifacture}
                                            li * Unlimited mileage included
                                a.book-now(href="/auth/bookings/add/" + car._id) Book Now
                else
                    | Sorry this car cannot be booked right now, please come back later!
            #{req.toastr.render()}
            #comments
                h2#comments-title Comments
                if context.comments.length   
                    each comment in context.comments
                        .single-comment
                            .comment-author
                                strong Author:
                                    =comment.author
                            .comment-text 
                                =comment.content
                else
                    if user
                        | No comments added. Be the first to comment this car!
                    else
                        | No comments added. Please register to add comments!
                if user
                    #add-new-comment
                        button#add-new-comment-btn(type='button', data-toggle='modal', data-target='#myModal') Add new comment
                    +comment